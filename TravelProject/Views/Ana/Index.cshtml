@using TravelProject.Models.Sınıflar
@model List<Blog>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<body>
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot" style="margin-left:111px;">TATİL & SEYEHAT BLOĞUM</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restourantlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kirala</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                        <div class="header_bottom_right_images">
                            <div class="slider" style="width:650px;height:350px;">
                                <ul class="rslides" id="slider1">
                                    @foreach (var item in Model)
                                     {
                                        <li><img src="@item.BlogImage" alt=""></li>
                                     }
                                </ul>
                            </div>
                        </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Tatil Seyehat Bloğuma Hoşgeldiniz!</h3>
                    <p style="font-weight:bold">Bu projeyi Kasım 2022 tarihinde başlatıp Aralık 2022'de bitirdim. Gezip gördüğüm yerleri sizlerle paylaşmak amaçıyla kodlamasını tamamen kendim yaptığım MVC5 üzerine kurulu dinamik bir web projesi gliştirdim. Hem Türkiyeden hemde yurt dışından gezip gördüğüm yerleri blog yazıları olarak sizlerle paylaşma niyetindeyim umuyoorum ki yazdıklarımı beğenirsiniz, keyifli günler.</p>
                </div>

                @Html.Action("Partial1","Ana")

                <div class="grids">
                    <div class="box1">

                        @Html.Action("Partial3", "Ana")

                        @Html.Action("Partial4", "Ana")

                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>