@using TravelProject.Models.Sınıflar
@model List<Yorumlar>


@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center;">Yorum Listesi</h2>

<table class="table table-bordered table-responsive-lg" style="text-align:center;">
    <tr>
        <th>ID</th>
        <th>KullanıcıAdı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>BlogID</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td>@item.Blog.Baslik</td>
            <td><a href="/Admin/YorumSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>